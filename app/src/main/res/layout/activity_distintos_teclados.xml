<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teclados.DistintosTecladosActivity">

    <Button
        android:id="@+id/TecladoTelefono"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="TecladoTelefono"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:id="@+id/TecladoNumeros"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="TecladoNumeros"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/TecladoTelefono"/>
    <Button
        android:id="@+id/numerico1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="TecladoNormal"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/TecladoNumeros"/>
    <Button
        android:id="@+id/numerico2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="TecladoTelefono2"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/numerico1"/>

</androidx.constraintlayout.widget.ConstraintLayout>